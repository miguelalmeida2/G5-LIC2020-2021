Name     KeyControl ; 
PartNo   00 ; 
Date     10/10/10 ;
Revision 01 ;
Designer Engineer ;
Company  None ;
Assembly None ; 
Location  ;
Device   v750c ;

/* Start Here */
PIN 1 = CLK;
PIN 2 = Kack;

PIN [3..6] = [!I0..3]; /*Inputs do PENC */

PIN [14..16] = [K0..2] ;
PIN [17..20] = [Q0..3] ;
PIN [21..22] = [A0..A1];
PIN 23 = Kval;

/* ***** COUNTER ***** */
[Q0..1].CK = !CLK;
[Q0..1].sp = 'b'0;


Q0.d = Q0 $ Kscan;
Q1.d = (Q0 & Kscan) $ Q1;

/* ***** DECODER ***** */
K0 = Q1 # Q0;
K1 = Q1 # !Q0;
K2 = !Q1 # Q0;

/* ****** PENC & REGISTER ****** */
[Q2..3].CK = !Kpress;
[Q2..3].sp = 'b'0;

Q2.d = (!I1 & I0 # !I3 & I2 & I0);
Q3.d = ((!I3 # !I2) & I1 & I0);
Kpress = !I0 # !I1 # !I2 # !I3;

/* ****** Key Control ****** */
[A0..A1].ck = CLK;
[A0..A1].sp = 'b'0;

sequence[A1, A0] {
    present 0
    	out Kscan;
    	if Kpress next 1;
    	default next 0;
      
    present 1
    	out Kval;
    	if !Kpress & Kack next 2;
    	default next 1;
      
    present 2
    	if !Kack next 0;
    	default next 2;
}